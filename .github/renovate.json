{
  "automergeStrategy": "merge-commit",
  "platformAutomerge": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Group all cert-manager components",
      "groupName": "cert-manager",
      "automerge": true,
      "autoApprove": true,
      "matchPackageNames": [
        "cert-manager",
        "github.com/cert-manager/cert-manager",
        "/^quay.io/jetstack/cert-manager-/"
      ]
    },
    {
      "description": "Auto-merge patch updates for Konflux components",
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "automerge": true,
      "autoApprove": true,
      "matchPackageNames": [
        "/^quay.io/konflux-ci//"
      ]
    },
    {
      "description": "Group Tekton bundle updates together",
      "groupName": "tekton-bundles",
      "automerge": true,
      "autoApprove": true,
      "matchPackageNames": [
        "/quay.io/konflux-ci/tekton-catalog//"
      ]
    },
    {
      "description": "Group container base image updates",
      "groupName": "container-images",
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "automerge": true,
      "autoApprove": true,
      "matchPackageNames": [
        "/registry.access.redhat.com//",
        "/registry.fedoraproject.org//"
      ]
    },
    {
      "description": "Auto-merge Go toolchain patch updates only",
      "matchPackageNames": [
        "go"
      ],
      "matchDatasources": [
        "golang-version"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "autoApprove": true
    }
  ]
}
